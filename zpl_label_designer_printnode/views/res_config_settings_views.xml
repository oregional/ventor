<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">Settings</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40" />
            <field name="inherit_id" ref="printnode_base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_setting_right_pane')][.//field[@name='print_labels_format']]" position="after">
                    <div class="o_setting_right_pane pt-4" invisible="print_labels_format != 'zld_label'">
                        <label for="print_product_zld_label_id" />
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                        <br />
                        <field name="print_product_zld_label_id" class="oe_inline" options="{'no_create': True, 'no_edit': True, 'no_open': True}" required="print_labels_format == 'zld_label'" />
                        <div class="text-muted">
                            This product label will be used in scenarios where you need to print a label for a product.
                            Note that you can use only Product Variant (product.product) labels.
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
